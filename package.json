    "@typescript-eslint/parser": "^8.19.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "vitest": "^2.1.8",
